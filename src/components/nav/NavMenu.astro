---
import AstroIcon, { Icons } from "../typography/AstroIcon.astro";
import LinkExternal from "../typography/LinkExternal.astro";
import LinkScroll from "../typography/LinkScroll.astro";
import TitlePrimary from "../typography/TitlePrimary.astro";

interface Props {
  className: string;
}

const { className } = Astro.props;
---

<div class={className}>
  <nav class="sticky top-0 pt-10 flex flex-cols justify-between">
    <LinkScroll link="#me">
      <TitlePrimary>EH</TitlePrimary>
    </LinkScroll>
    <ul class="grid gap-x-5 grid-flow-col auto-cols-max">
      <LinkScroll link="#me">Me</LinkScroll>
      <p>|</p>
      <LinkScroll link="#music">Music</LinkScroll>
      <p>|</p>
      <LinkScroll link="#code">Code</LinkScroll>
    </ul>
  </nav>
  <slot />
  <footer
    class="sticky bottom-5 sm:bottom-0 pb-10 flex flex-cols justify-between"
  >
    <LinkExternal link="/ElieHymowitz.pdf">CV</LinkExternal>
  </footer>
</div>
