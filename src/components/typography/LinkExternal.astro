---
import { Icons } from "./AstroIcon.astro";
interface Props {
  link: string;
  embed?: string;
  hoverIcon?: keyof typeof Icons;
  onClick?: string;
}
const { link, embed, hoverIcon, onClick } = Astro.props;
---

<a
  class={`font-secondary text-2xl flex ${
    hoverIcon
      ? `${
          Icons[hoverIcon as keyof typeof Icons].hoverColor
        } transition-all duration-500`
      : ""
  }`}
  target={onClick ? null : "_blank"}
  onclick={onClick}
  href={link}
  data-embed={embed}><slot /></a
>
