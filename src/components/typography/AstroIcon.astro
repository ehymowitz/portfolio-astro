---
import { Icon } from "astro-icon";
import type { IconNames } from "../../types";

interface Props {
  name: IconNames;
}

const { name } = Astro.props;

const baseStyle = "w-7 mr-2 transition-all duration-500 hover:opacity-80";

const colorStyle: { [key in IconNames]: string } = {
  "mdi:instagram": `${baseStyle} hover:text-red-400`,
  "mdi:spotify": `${baseStyle} hover:text-green-800`,
  "mdi:linkedin": `${baseStyle} hover:text-blue-600`,
  "mdi:github": `${baseStyle} hover:text-stone-900`,
  "mdi:email": `${baseStyle} hover:text-amber-700`,
  "simple-icons:mongodb": `${baseStyle} hover:text-amber-700`,
  "simple-icons:astro": `${baseStyle} hover:text-amber-700`,
  "mdi:tailwind": `${baseStyle} hover:text-amber-700`,
  "teenyicons:netlify-outline": `${baseStyle} hover:text-amber-700`,
  "teenyicons:nextjs-solid": `${baseStyle} hover:text-amber-700`,
  "mdi:sass": `${baseStyle} hover:text-amber-700`,
  "ion:logo-vercel": `${baseStyle} hover:text-amber-700`,
};
---

<Icon name={name} class={colorStyle[name]} />
