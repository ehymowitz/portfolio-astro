---
import { Icon } from "astro-icon";

interface Props {
  icon: { iconName: string; hoverColor: string };
}

const { icon } = Astro.props;

export const Icons = {
  instagram: { iconName: "mdi:instagram", hoverColor: "hover:text-red-600" },
  spotify: { iconName: "mdi:spotify", hoverColor: "hover:text-green-800" },
  linkedin: { iconName: "mdi:linkedin", hoverColor: "hover:text-blue-600" },
  github: { iconName: "mdi:github", hoverColor: "hover:text-stone-700" },
  email: { iconName: "mdi:email", hoverColor: "hover:text-amber-700" },
  mongo: {
    iconName: "simple-icons:mongodb",
    hoverColor: "hover:text-green-900",
  },
  astro: {
    iconName: "simple-icons:astro",
    hoverColor: "hover:text-fuchsia-700",
  },
  tailwind: { iconName: "mdi:tailwind", hoverColor: "hover:text-sky-500" },
  netlify: {
    iconName: "teenyicons:netlify-outline",
    hoverColor: "hover:text-teal-600",
  },
  next: {
    iconName: "teenyicons:nextjs-solid",
    hoverColor: "hover:text-zinc-500",
  },
  sass: { iconName: "mdi:sass", hoverColor: "hover:text-pink-700" },
  vercel: { iconName: "ion:logo-vercel", hoverColor: "hover:text-zinc-500" },
  expo: {
    iconName: "simple-icons:expo",
    hoverColor: "hover:text-stone-400",
  },
  firebase: { iconName: "mdi:firebase", hoverColor: "hover:text-yellow-600" },
  supabase: {
    iconName: "simple-icons:supabase",
    hoverColor: "hover:text-green-500",
  },
  calendly: {
    iconName: "mdi:calendar",
    hoverColor: "hover:text-[#006BFF]",
  },
  paper: {
    iconName: "mdi:note-outline",
    hoverColor: "hover:text-gray-600",
  },
};
---

<Icon
  name={icon.iconName}
  class={`w-7 mr-2 transition-all duration-500 ${icon.hoverColor}`}
/>
